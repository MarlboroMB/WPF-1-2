<Page x:Class="Praktika_1_WPF.new_window.MainB"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika_1_WPF.new_window"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainB">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="10 0 0 0">
            <Button FontFamily="PF Stamps Pro Metal Regular"
                    Content="Создать аккаунт"
                    FontSize="30"
                    Background="DarkGray"
                    Foreground="Black"
                    Height="40"
                    Width="300"
                    Name="Btn_create"
                    Margin="0 0 450 100" Click="Btn_create_Click"/>

            <Button FontFamily="PF Stamps Pro Metal Regular"
                    Content="Войти в аккаунт"
                    FontSize="30"
                    Background="DarkGray"
                    Foreground="Black"
                    Height="40"
                    Width="300" Click="Button_Click"
                    Margin="0 -110 450 0"/>
        </StackPanel>
    </Grid>
</Page>
